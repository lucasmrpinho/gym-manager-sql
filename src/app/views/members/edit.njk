{% extends "layouts.njk" %}

{% block content %}


    <div class = "card">

        
            <section 
            class="avatar" 
            style="background: url({{member.avatar_url}}) no-repeat center center / cover">
            </section>

             <section class="details">

            <form method="POST" action="/members?_method=PUT">

                 <h3>Editar Detalhes</h3>

                {% include 'members/fields.njk' %}

                 <input type="hidden"
                        name="id"
                        value={{member.id}}
                        >  

                 </form>

                <form id="delete-form" action="/members?_method=DELETE" method="POST">
                <input type="hidden"
                       name="id"
                       value={{member.id}}
                       >
                <button type="submit">Deletar</button>  

             </section>
    </div>

   {% include 'delete.njk' %}

{% endblock content %}